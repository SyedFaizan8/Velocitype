// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id     Int     @id @default(autoincrement())
  full_name   String
  unique_name String  @unique
  email       String  @unique
  bio         String?
  password    String
  twitter     String?
  instagram   String?
  website     String?
  created_at  DateTime @default(now())

  history     History[]        
  stats       TotalStatistics? 
  leaderboard Leaderboard?    
}

model History {
  history_id       Int     @id @default(autoincrement())
  user_id          Int
  wpm              Int
  accuracy         Decimal @db.Decimal(5,2) // Corrected this line
  date             DateTime @default(now())

  user User @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@index([user_id]) 
}

model TotalStatistics {
  user_id         Int @id
  total_tests_taken Int
  total_letters_typed Int
  total_words_typed Int

  user User @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model Leaderboard {
  user_id          Int @id
  highest_wpm      Int
  highest_accuracy Decimal @db.Decimal(5,2) // Corrected this line
  achieved_at      DateTime @default(now())

  user User @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@index([user_id]) 
}
